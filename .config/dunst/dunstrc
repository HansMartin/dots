[global]

    # Define a border
    frame_width = 2
    font = Noto Sans 10
    markup = full

    # %s = summary, %b = body
    format = "%s\n%b"

    # sort the notifications by urgency
    sort = yes

    # alignment of the notification message (left, center, right)
    alignment = left

    # dont split-up lines
    word_wrap = no
    ignore_newline = no

l
    geometry = "350x5-0+20"

    # shrink if the message is smaller than the width
    shrink = yes

    monitor = 0
    follow = keyboard

    # indicators for urls (U) and actions (A)
    show_indicators = yes

    separator_height = 1

    padding = 5
    horizontal_padding = 10

    # for opening ulrs
    browser = firefox

    icon_position = left


